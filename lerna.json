{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "message": "chore: publish release [skip ci]",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "feature/*"]
    },
    "diff": {
      "ignoreChanges": ["**/*.test.js", "**/*.md", "**/package-lock.json"]
    }
  },
  "ignoreChanges": ["**/*.test.js", "**/*.md", "**/package-lock.json"]
}
