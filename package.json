{
  "private": true,
  "description": "Javascript SDK for Availity",
  "repository": {
    "type": "git",
    "url": "https://github.com/Availity/sdk-js.git"
  },
  "scripts": {
    "lint": "eslint .",
    "bootstrap": "lerna bootstrap --no-ci",
    "link": "lerna link",
    "updated": "lerna updated",
    "clean": "lerna clean --yes",
    "publish": "lerna publish",
    "test": "jest --silent",
    "postinstall": "npm run bootstrap",
    "release": "npm run check:packages && lerna publish",
    "release:canary": "npm run check:packages && lerna publish -c",
    "add": "sh ./scripts/add.sh",
    "nuke": "npm run remove-locks && npm run clean",
    "remove-locks": "find . -type f -name 'package-lock.json' -delete",
    "check:packages": "sh ./scripts/artifactory-check.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/plugin-transform-destructuring": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/plugin-transform-shorthand-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "conventional-changelog-cli": "^2.0.11",
    "conventional-recommended-bump": "^4.0.4",
    "eslint-config-availity": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-environment-jsdom-global": "^1.1.0",
    "lerna": "^3.11.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.13.7"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "npm test",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        85
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "contributors": [
    {
      "name": "kasey powers",
      "url": "https://github.com/kaseypowers"
    },
    {
      "name": "robert mcguinness",
      "url": "https://github.com/robmcguinness"
    }
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "npm run check:packages && lint-staged"
    }
  }
}
